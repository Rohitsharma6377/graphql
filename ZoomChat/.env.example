# Application
NEXT_PUBLIC_APP_NAME="HeartShare"
NEXT_PUBLIC_API_BASE="/api"
PORT=3000

# Backend API URL (Video Call Server)
NEXT_PUBLIC_API_URL=http://localhost:5001

# WebRTC Configuration
NEXT_PUBLIC_STUN="stun:stun.l.google.com:19302"
TURN_URL=turn:your-turn-server:3478
TURN_USER=turnuser
TURN_PASS=turnpass

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/heartshare

# NextAuth (for future authentication)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here

# Admin Configuration
# Set this cookie after login to grant admin access
# In production, use proper authentication
ADMIN_SECRET_KEY=your-admin-secret-key

# Optional: Email Configuration
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@heartshare.com
